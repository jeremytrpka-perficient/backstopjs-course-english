{
  "id": "Ticketbox",
  "viewports": [
    {
      "label": "tablet",
      "width": 1024,
      "height": 768
    }
  ],
  "onBeforeScript": "puppet/onBefore.js",
  "onReadyScript": "puppet/onReady.js",
  "scenarios": [
    {
      "label": "Initial State",
      "url": "https://ticketbox-backstopjs-tat.s3.eu-central-1.amazonaws.com/index.html",
      "misMatchThreshold" : 0,
      "requireSameDimensions": true
    },
    {
      "label": "Checked VIP",
      "url": "https://ticketbox-backstopjs-tat.s3.eu-central-1.amazonaws.com/index.html",
      "clickSelector": "input#vip",
      "misMatchThreshold" : 0,
      "requireSameDimensions": true
    },
    {
      "label": "Checkboxes",
      "url": "https://ticketbox-backstopjs-tat.s3.eu-central-1.amazonaws.com/index.html",
      "clickSelectors": [
        "input#friend",
        "input#publication",
        "input#social-media"
      ],
      "misMatchThreshold" : 0,
      "requireSameDimensions": true
    },
    {
      "label": "Select 3 Tickets",
      "url": "https://ticketbox-backstopjs-tat.s3.eu-central-1.amazonaws.com/index.html",
      "onReadyScript": "puppet/custom/selectTickets.js",
      "misMatchThreshold" : 0,
      "requireSameDimensions": true
    },
    {
      "label": "Invalid Email Field",
      "url": "https://ticketbox-backstopjs-tat.s3.eu-central-1.amazonaws.com/index.html",
      "onReadyScript": "puppet/custom/invalidEmail.js",
      "misMatchThreshold" : 0,
      "requireSameDimensions": true
    },
    {
      "label": "Fill out required fields",
      "url": "https://ticketbox-backstopjs-tat.s3.eu-central-1.amazonaws.com/index.html",
      "onReadyScript": "puppet/custom/fillOutRequiredFields.js",
      "misMatchThreshold" : 0,
      "requireSameDimensions": true
    },
    {
      "label": "Click Confirm",
      "url": "https://ticketbox-backstopjs-tat.s3.eu-central-1.amazonaws.com/index.html",
      "onReadyScript": "puppet/custom/clickConfirm.js",
      "hideSelectors": [
        "div.success span"
      ],
      "misMatchThreshold" : 0,
      "requireSameDimensions": true
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_reference",
    "bitmaps_test": "backstop_data/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": ["browser"],
  "engine": "puppeteer",
  "engineOptions": {
    "args": ["--no-sandbox"]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}
